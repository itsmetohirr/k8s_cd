pipeline {
    agent {
        docker {
            image 'bitnami/kubectl:1.33.1'
            args "-v /root/.kube:/root/.kube --entrypoint=''"
        }
    }

    stages{
        stage('check') {
            steps {
                sh 'kubectl'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                kubeconfig(caCertificate: '', 
                credentialsId: 'kubeconfig', 
                serverUrl: 'https://127.0.0.1:61524') {
                        sh 'kubectl cluster-info'
                }
            }
        }
    }
}
